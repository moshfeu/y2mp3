{
  "name": "y2mp3",
  "appname": "y2mp3",
  "productName": "y2mp3",
  "version": "1.0.1",
  "main": "main.js",
  "author": {
    "name" : "MosheF",
    "email" : "moshfeu.dev@gmail.com",
    "url" : "https://github.com/moshfeu"
  },
  "email": "moshfeu.dev@gmail.com",
  "license": "MIT",
  "description": "An app to download youtube videos as mp3",
  "scripts": {
    "start": "webpack --watch",
    "electron": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist-windows": "npm run dist -- --win",
    "dist-linux": "npm run dist -- --linux",
    "generate-icons": "./node_modules/.bin/electron-icon-maker --input=app-resources/logo-full-size.png --output=resources",
    "build": "webpack --config webpack.prod.js",
    "test": "node --trace-warnings ./test/runTests.js"
  },
  "dependencies": {
    "downloads-folder": "^1.0.1",
    "electron-is-dev": "^1.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "sinon": "^7.1.1",
    "youtube-mp3-downloader": "git+https://github.com/moshfeu/youtube-mp3-downloader.git",
    "youtube-playlist": "^1.0.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/fluent-ffmpeg": "^2.1.8",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/sinon": "^5.0.7",
    "autoprefixer": "^9.3.1",
    "css-loader": "^1.0.1",
    "electron": "^3.0.8",
    "electron-builder": "^20.28.4",
    "electron-icon-maker": "0.0.4",
    "ffbinaries": "^1.1.0",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "node-sass": "^4.10.0",
    "object-assign": "^4.1.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.2.2",
    "typescript": "^3.1.3",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "ytdl-core": "^0.26.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/preprocessor.js"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "testMatch": [
      "**/?(*.)spec.ts?(x)"
    ]
  },
  "build": {
    "appId": "moshfeu.y2mp3",
    "files": [
      "index.html",
      "main.js",
      "resources/**"
    ],
    "mac": {
      "icon": "resources/icons/mac/icon.icns"
    },
    "dmg": {
      "icon": "resources/icons/mac/icon.icns",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Music"
    },
    "win": {
      "target": "NSIS",
      "icon": "resources/icons/win/icon.ico"
    },
    "nsis": {
      "installerIcon": "resources/icons/win/icon.ico"
    }
  }
}
